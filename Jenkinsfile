pipeline {
    agent any

    stages {
        stage('Suma') {
            steps {
                script {
                    // Definir dos n√∫meros para la suma
                    def numero1 = 5
                    def numero2 = 7

                    // Realizar la suma
                    def resultado = numero1 + numero2

                    // Mostrar el resultado en la consola
                    echo "La suma de ${numero1} y ${numero2} es: ${resultado}"
                }
            }
        }
    }
}
